        app:layout_constraintEnd_toEndOf="@+id/priceLabelIntro"
        app:layout_constraintStart_toStartOf="@+id/priceLabelIntro"
        app:layout_constraintTop_toBottomOf="@+id/priceLabelIntro" />

    <TextView
        android:id="@+id/phoneLabelIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Phone Number"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline7" />

    <TextView
        android:id="@+id/statusLabelIntro"
