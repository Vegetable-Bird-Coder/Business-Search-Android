        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/priceLabelIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Price Range"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addressIntro"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toEndOf="@+id/addressLabelIntro"
        app:layout_constraintStart_toStartOf="@+id/addressLabelIntro"
        app:layout_constraintTop_toBottomOf="@+id/addressLabelIntro" />

    <TextView
        android:id="@+id/priceIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
